@model IEnumerable<Games>
@{
    ViewData["Title"] = "Games";
}

<!--<partial name="_Notification" /> -->

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary">Games List</h2>
        </div>
        <div class="col-4 text-end">
            
        </div>
        <div class="col-4">
            <a asp-controller="Games" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle-dotted"></i> &nbsp; Add New Game
            </a>
        </div>
    </div>
</div>
<br /> <br />

<table class="d-lg-table table-bordered table-stripped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Game Name
            </th>
            <th>
                Game Genre
            </th>
            <th>
                Game Score
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.GameName
                </td>
                <td width="30%">
                    @obj.GameGenre
                </td>
                <td width="30%">
                    @obj.ScoreValue
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Games" asp-action="Edit" asp-route-id="@obj.GameId" class="btn btn-primary mx-2"> 
                            <i class="bi bi-pencil-fill"> </i> &nbsp; Edit</a>
                            <a asp-controller="Games" asp-action="Delete" asp-route-id="@obj.GameId" class="btn btn-danger mx-2"> 
                            <i class="bi bi-trash-fill"></i> &nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

