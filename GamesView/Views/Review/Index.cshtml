@model IEnumerable<Review>
@{
    ViewData["Title"] = "Review Page";
}

<a  class="btn btn-primary btn-lg mt-3 mb-3" asp-controller="Review" asp-action="CreateReview"> <i class="bi bi-plus-circle-dotted"></i> &nbsp; Add new Review</a>


<table class="table table-hover">
    <thead>
        <th scope="col">ReviewId</th>
        <th scope="col">GameName</th>
        <th scope="col">GameDescription</th>
        <th scope="col">ScoreValue</th>
        <th scope="col">ReviewText</th>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr class="table-active">
                <td>@obj.ReviewId</td>
                <td>@obj.GameName</td>
                <td>@obj.GameDescription</td>
                <td>@obj.ScoreValue</td>
                <td>@obj.ReviewText</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Games" asp-action="Edit" asp-route-id="@obj.ReviewId" class="btn btn-primary mx-2"> 
                            <i class="bi bi-pencil-fill"> </i> &nbsp; Edit</a>
                        <a asp-controller="Games" asp-action="Delete" asp-route-id="@obj.ReviewId" class="btn btn-danger mx-2"> 
                            <i class="bi bi-trash-fill"></i> &nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>