@model News
@{
    ViewData["Title"] = "Add News";
}
<h1 class="m-3">Add News to the Website.</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Link"></label>
        <input asp-for="Link" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="News" asp-action="Index" class="btn btn-primary" style="width:150px">Back to List</a>
</form>
